<!--pages/departpage/departpage.wxml-->
<view class='page'>
  <view class='titlebar'>云南省第一人民医院</view>
  <view class='retrieval'>
    <view class='leftbar'>
      <view wx:for="{{catePidName}}" wx:key="">
        <view class='leftbartodolist' bindtap='catepidSelected' id="{{index}}">{{item.cate_pid_name}}</view>
      </view>
    </view>
    <view class='rightbar'>
      <view wx:for="{{cateTitle}}" wx:key="">
        <view class='rightbartodolist' bindtap='cateSelected' data-a='{{item.cate_title}}'>{{item.cate_title}}</view>
      </view>
    </view>
  </view>
</view>