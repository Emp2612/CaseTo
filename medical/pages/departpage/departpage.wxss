/* pages/departpage/departpage.wxss */

.page {
  width: 100%;
  background: #f5f5f5;
}

.retrieval {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
}

/* 左侧栏 */

.leftbar {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  color: #000;
  text-align: center;
}

.leftbartodolist {
  height: 60rpx;
  margin-top: 20rpx;
  border-right: 1px solid transparent;
  border-bottom: 1px solid transparent;
}

.leftbar active {
  padding-left: 20rpx;
  color: #196db6;
  background-color: #ccc;
}

.rightbar {
  display: flex;
  flex-direction: column;
  background-color: #ccc;
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  text-align: center;
}

.rightbartodolist {
  height: 60rpx;
  margin-top: 20rpx;
  color: #000;
  border-left: 1px solid transparent;
  border-bottom: 1px solid transparent;
}

.titlebar {
  text-align: center;
  font-size: 12pt;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #ccc;
}
