/* pages/departpage/departpage.wxss */

.page {
  width: 100%;
  background: #f5f5f5;
}

.retrieval {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #c0c0c0;
}

/* 左侧栏 */

.leftbar {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 50%;
  height: 100%;
  font-size: 10pt;
  color: #000;
  text-align: center;
}

.leftbartodolist {
  height: 50rpx;
  padding-top: 20rpx;
  /* margin-top: 20rpx; */
  border-right: 1px solid transparent;
  border-bottom: 1px solid transparent;
}

.leftbarimg {
  width: 12rpx;
  height: 27rpx;
  position: absolute;
  padding-left: 120rpx;
  padding-top: 25rpx;
}

.leftbarbtn {
  position: absolute;
  width: 35rpx;
  height: 68rpx;
  border: 1rpx solid transparent;
  background-color: #196db6;
}

.leftbar active {
  padding-left: 20rpx;
  color: #196db6;
  background-color: #c0c0c0;
}

.rightbar {
  display: flex;
  flex-direction: column;
  background-color: #ebebeb;
  width: 50%;
  height: 100%;
  font-size: 10pt;
  text-align: center;
}

.rightbartodolist {
  height: 50rpx;
  margin-top: 20rpx;
  color: #000;
  border-left: 1px solid transparent;
  border-bottom: 1px solid transparent;
}

.titlebar {
  text-align: center;
  font-size: 12pt;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #f0f0f0;
  border-bottom: 1rpx solid #a8a8a8;
}
