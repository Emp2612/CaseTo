/* pages/testlist/testlist.wxss */

.page {
  width: 100%;
  /* position: absolute; */
}

/* 顶部选择栏 */

.tabbtn {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.tabbtn-item {
  display: flex;
  font-size: 30rpx;
  width: 100%;
  height: 60rpx;
  padding-top: 20rpx;
  justify-content: center;
  border-top: 1rpx solid #d1d3d4;
  border-bottom: 1rpx solid #d1d3d4;
}

.tabbtn-icon {
  position: absolute;
  padding-top: 38rpx;
  padding-left: 250rpx;
  justify-content: center;
  width: 24rpx;
  height: 13rpx;
}

.lefttab {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 85rpx;
  /* border-right: 1rpx solid #d1d3d4; */
}

.righttab {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 60rpx;
}

/* 选择窗 */

.option {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #e8e8e8;
}

.option-item {
  width: 170rpx;
  height: 50rpx;
  text-align: center;
  padding-top: 13rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
  border: 1rpx solid #ccc;
  font-size: 25rpx;
  font-style: letter-spacing;
}

.list-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: center;
}
