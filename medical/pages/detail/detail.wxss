/* 同科室推荐list */

.nav_section {
  width: 100%;
}

.nav_section_items {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #ddd;
  position: relative;
}

.nav_section_items:active {
  background: #ddd;
}

.nav_section_items .section_image {
  width: 150rpx;
  height: 201rpx;
}

.nav_section_items .section_image image {
  width: 100%;
  height: 100%;
  margin-top: 10rpx;
}

.nav_section_items .section_cont {
  width: 400rpx;
  font-size: 28rpx;
  color: #505050;
}

.nav_section_items .section_cont_view {
  display: flex;
  flex-direction: row;
  text-align-last: justify;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* display: block; */
}

.nav_section_items .section_cont .section_cont_intro {
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.nav_section_items .section_cont .section_cont_sub {
  font-size: 35rpx;
  font-family: Microsoft YaHei;
  display: flex;
  flex-direction: row;
  font-weight: 500;
  line-height: 60rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.nav_section_items .section_cont .section_cont_quantity {
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #39f;
}

.nav_section_items .section_cont .section_cont_rank {
  font-weight: 400;
  font-size: 28rpx;
  color: #505050;
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
}

.nav_section_items .section_book {
  width: 90rpx;
  height: 90rpx;
  font-size: 26rpx;
  border-radius: 100%;
  background: #186db3;
  line-height: 90rpx;
  color: #fff;
  text-align: center;
  margin-top: 50rpx;
}

